                    LeaderId = scheduled.LeaderId,
                    AppointmentTypeId = selectedAppointmentType.Id,
                    ScheduledTime = scheduled.ScheduledTime,
                    Status = AppointmentStatus.Pending,
                    CreatedDate = DateTime.Now,
