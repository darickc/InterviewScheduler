@page "/auth/google/callback"
@using InterviewScheduler.Core.Interfaces
@inject ICalendarService CalendarService
@inject NavigationManager Navigation
@inject IJSRuntime JSRuntime
@rendermode InteractiveServer

<PageTitle>Google Calendar Authorization</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body text-center">
                    @if (isProcessing)
                    {
                        <div class="spinner-border text-primary" role="status">
                            <span class="visually-hidden">Loading...</span>
                        </div>
                        <h4 class="mt-3">Processing authorization...</h4>
                        <p>Please wait while we connect to your Google Calendar.</p>
                    }
                    else if (authSuccess)
                    {
                        <div class="text-success">
                            <i class="bi bi-check-circle" style="font-size: 3rem;"></i>
                            <h4 class="mt-3">Authorization Successful!</h4>
                            <p>Your Google Calendar has been connected successfully.</p>
                            <button class="btn btn-primary" @onclick="GoToLeaders">
                                Continue to Leaders
                            </button>
                        </div>
                    }
                    else
                    {
                        <div class="text-danger">
                            <i class="bi bi-x-circle" style="font-size: 3rem;"></i>
                            <h4 class="mt-3">Authorization Failed</h4>
                            <p>@errorMessage</p>
                            <button class="btn btn-secondary" @onclick="GoToLeaders">
                                Return to Leaders
                            </button>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private bool isProcessing = true;
    private bool authSuccess = false;
    private string errorMessage = "";

    protected override async Task OnInitializedAsync()
    {
        var uri = new Uri(Navigation.Uri);
        var query = Microsoft.AspNetCore.WebUtilities.QueryHelpers.ParseQuery(uri.Query);

        if (query.TryGetValue("code", out var code))
        {
            try
            {
                var redirectUri = $"{Navigation.BaseUri}auth/google/callback";
                authSuccess = await CalendarService.ProcessAuthorizationCodeAsync(code!, redirectUri);
                
                if (!authSuccess)
                {
                    errorMessage = "Failed to process authorization code. Please try again.";
                }
            }
            catch (Exception ex)
            {
                errorMessage = $"An error occurred: {ex.Message}";
                authSuccess = false;
            }
        }
        else if (query.TryGetValue("error", out var error))
        {
            errorMessage = $"Authorization was denied: {error}";
            authSuccess = false;
        }
        else
        {
            errorMessage = "No authorization code received.";
            authSuccess = false;
        }

        isProcessing = false;
    }

    private void GoToLeaders()
    {
        Navigation.NavigateTo("/leaders");
    }
}